---
import type { Post, Heading } from '@/types';
import { siteConfig } from '@/config';
import { generatePostSEO } from '@/utils/seo';
import { optimizePostImagePath, getOptimizedFormat } from '@/utils/images';
import { processWikilinksInHTML } from '@/utils/internallinks';
import { getCollection } from 'astro:content';
import { shouldShowPost, processPost, calculateReadingTime, generateTOC, getAdjacentPosts, formatDate, formatDateMobile, getReadingTimeMobile } from '@/utils/markdown';
import BaseLayout from '@/layouts/BaseLayout.astro';
import TableOfContents from '@/components/TableOfContents.astro';
import LinkedMentions from '@/components/LinkedMentions.astro';
import LocalGraph from '@/components/LocalGraph.astro';
import GiscusComments from '@/components/GiscusComments.astro';
import Lightbox from '@/components/Lightbox.astro';
import Icon from '@/components/Icon.astro';
import ImageWrapper from '@/components/ImageWrapper.astro';
import { devConfig } from '@/config/dev';
import { readFileSync } from 'fs';
import { join } from 'path';

export interface Props {
  post: Post;
}

const { post } = Astro.props;

// 检查是否处于开发模式
const isDev = import.meta.env.DEV;

// 生成 SEO 数据
const seoData = generatePostSEO(post, import.meta.env.SITE || '');



// 为文章生成结构化数据
const structuredData = {
  "@context": "https://schema.schema.org",
  "@type": "BlogPosting",
  "headline": post.data.title,
  "description": post.data.description,
  "author": {
    "@type": "Person",
    "name": siteConfig.author
  },
  "publisher": {
    "@type": "Organization",
    "name": siteConfig.title,
    "logo": {
      "@type": "ImageObject",
      "url": siteConfig.site + "/favicon.ico"
    }
  },
  "datePublished": post.data.date.toISOString(),
  "dateModified": post.data.date.toISOString(),
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": Astro.url.href
  }
};

// 获取所有文章用于维基链接解析
const allPosts = await getCollection('posts');
const visiblePosts = allPosts.filter(p => shouldShowPost(p, isDev));

// 处理文章内容并获取处理后的数据，包括字数统计
const { Content, headings, wordCount, remarkPluginFrontmatter } = await processPost(post);
const readingTime = calculateReadingTime(post.body);

// 如果启用则生成目录
const hideTOC = post.data.hideTOC === true;
const shouldShowTOC = !hideTOC && siteConfig.tableOfContents.enabled && headings.length > 0;
const toc = shouldShowTOC ? await generateTOC(headings) : [];

// 获取相邻文章用于导航
const { prev: prevPost, next: nextPost } = getAdjacentPosts(visiblePosts, post.id);

// 检查当前文章是否有 LocalGraph 连接
let hasLocalGraphConnections = false;
if (siteConfig.postOptions.graphView.enabled && siteConfig.postOptions.graphView.showInSidebar) {
  try {
    // 直接从文件系统读取图数据文件（在构建时工作）
    const graphDataPath = join(process.cwd(), 'public', 'graph', 'graph-data.json');
    const graphDataContent = readFileSync(graphDataPath, 'utf-8');
    const graphData = JSON.parse(graphDataContent);

    // 检查当前文章是否有任何连接（传入和传出）
    const matchingConnections = graphData.connections.filter((conn: any) =>
      conn.source === post.id || conn.target === post.id
    );
    
    hasLocalGraphConnections = matchingConnections.length > 0;
  } catch (error) {
    // 如果在构建时无法读取图数据，则不显示图
    hasLocalGraphConnections = false;
  }
}
---

<BaseLayout seoData={seoData}>
  <Fragment slot="head">
    <!-- 结构化数据 -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

    <!-- 预加载文章封面图片 - 仅针对肯定会立即显示图片的文章 -->
    {(() => {
      if (!post.data.image || post.data.hideCoverImage === true) return false;

      const showCoverImages = siteConfig.postOptions.showPostCardCoverImages;
      // 仅预加载可能立即显示图片的文章
      // 跳过可能延迟渲染的复杂文章的预加载
      const shouldPreload = ['all', 'posts', 'featured-and-posts'].includes(showCoverImages) &&
                           post.id !== 'formatting-reference';

      return shouldPreload;
    })() && (
      <link
        rel="preload"
        as="image"
        href={post.data.image?.startsWith('http') ? post.data.image : (post.data.image ? optimizePostImagePath(post.data.image, post.id, post.id) : '')}
        fetchpriority="high"
      />
    )}

    <!-- 文章特定的元标签 -->
    {post.data.targetKeyword && (
      <meta name="keywords" content={post.data.targetKeyword}>
    )}
  </Fragment>

  <div class="py-8 relative">
    <div class="mx-auto px-4 sm:px-6 lg:px-8 relative" style={`max-width: ${siteConfig.layout.contentWidth}`}>
      <!-- 主要内容 -->
      <article class={`bg-primary-50 dark:bg-primary-900 rounded-lg border border-primary-200 dark:border-primary-700 shadow-sm ${siteConfig.postOptions.showPostCardCoverImages !== 'none' && post.data.image && post.data.hideCoverImage !== true ? 'overflow-hidden' : ''}`}>
        {/* 封面图片 - 如果全局配置允许且未被 frontmatter 隐藏则显示 */}
        {siteConfig.postOptions.showPostCardCoverImages !== 'none' && post.data.image && post.data.hideCoverImage !== true && (() => {
          // 处理图片路径，类似于 PostCard
          let rawImage = post.data.image;
          if (Array.isArray(rawImage)) {
            rawImage = rawImage[0];
          }
          
          // 清理 Obsidian 括号
          let cleanImagePath = typeof rawImage === 'string' ? rawImage : '';
          if (cleanImagePath.startsWith('[[') && cleanImagePath.endsWith(']]')) {
            cleanImagePath = cleanImagePath.slice(2, -2);
          }
          
          // 确定 ImageWrapper 的 src 和 basePath
          let imageSrc = cleanImagePath;
          let imageBasePath = '';
          
          if (typeof cleanImagePath === 'string' && cleanImagePath.startsWith('http')) {
            // 外部 URL - 直接传递
            imageSrc = cleanImagePath;
            imageBasePath = '';
          } else {
            // 检测基于文件夹与基于文件：如果图片路径以 'attachments/' 开头，
            // 则是单文件文章（共享附件文件夹）
            const isFileBased = typeof cleanImagePath === 'string' && cleanImagePath.startsWith('attachments/');
            
            if (isFileBased) {
              // 单文件文章 - 移除 attachments/ 前缀
              imageSrc = cleanImagePath.replace('attachments/', '');
              imageBasePath = '/posts/attachments/';
            } else {
              // 基于文件夹的文章 - 同步脚本将图片复制到文章文件夹根目录
              // 如果存在则移除 'images/' 或 'attachments/' 前缀（同步脚本会移除它们）
              if (cleanImagePath.startsWith('images/') || cleanImagePath.startsWith('attachments/')) {
                imageSrc = cleanImagePath.replace(/^(images|attachments)\//, '');
              } else {
                imageSrc = cleanImagePath;
              }
              // 安全检查：在使用 post.id 之前确保它存在
              if (post.id) {
                imageBasePath = `/posts/${post.id}/`;
              } else {
                // 如果 post.id 未定义，回退到附件目录
                imageBasePath = '/posts/attachments/';
              }
            }
          }
          
          // 如果适用则转换为 WebP（sync-images.js 会创建 WebP 版本）
          imageSrc = getOptimizedFormat(imageSrc);
          
          return (
            <div class="h-40 sm:h-48 md:h-56 lg:h-64 overflow-hidden rounded-t-lg bg-primary-100 dark:bg-primary-800">
              <ImageWrapper
                src={imageSrc}
                basePath={imageBasePath}
                alt={post.data.imageAlt || `文章特色图片: ${post.data.title}`}
                class="w-full h-full"
                width={800}
                height={450}
                format="webp"
                quality={85}
                loading="eager"
                fetchpriority="high"
              />
            </div>
          );
        })()}

        <!-- 文章内容包装器 -->
        <div class={`p-6 ${siteConfig.postOptions.showPostCardCoverImages !== 'none' && post.data.image && post.data.hideCoverImage !== true ? 'rounded-b-lg' : 'rounded-lg'}`}>
          <!-- 文章页眉 -->
          <header class="mb-4">
          <h1 class="text-xl font-bold text-primary-900 dark:text-primary-50 mb-6 leading-tight">
            {post.data.title}
          </h1>

          <div class="flex flex-wrap items-center gap-x-4 gap-y-2 text-sm text-primary-600 dark:text-primary-300 mb-6">
            <time datetime={post.data.date.toISOString()} class="font-medium">
              <span class="hidden sm:inline">
                {formatDate(post.data.date)}
              </span>
              <span class="sm:hidden">
                {formatDateMobile(post.data.date)}
              </span>
            </time>

            {siteConfig.postOptions.readingTime && readingTime && (
              <>
                <span class="text-primary-300 dark:text-primary-600 hidden sm:inline">•</span>
                <span class="text-primary-300 dark:text-primary-600 sm:hidden">•</span>
                <span>
                  <span class="hidden sm:inline">{readingTime.text && readingTime.text !== 'read0' && readingTime.text !== '' ? readingTime.text.replace('min read', '分钟阅读') : '1 分钟阅读'}</span>
                  <span class="sm:hidden">{getReadingTimeMobile(readingTime).replace('min', '分钟')}</span>
                </span>
              </>
            )}

            {siteConfig.postOptions.wordCount && wordCount !== undefined && (
              <>
                <span class="text-primary-300 dark:text-primary-600 hidden sm:inline">•</span>
                <span class="text-primary-300 dark:text-primary-600 sm:hidden">•</span>
                <span class="min-w-0">
                  <span class="hidden sm:inline">{wordCount === 1 ? '1 字' : `${wordCount} 字`}</span>
                  <span class="sm:hidden">{wordCount === 1 ? '1 字' : `${wordCount.toLocaleString()} 字`}</span>
                </span>
              </>
            )}
          </div>

          {siteConfig.postOptions.tags && post.data.tags && post.data.tags.length > 0 && (
            <div class="flex flex-wrap gap-2 mb-8">
              {post.data.tags.map(tag => (
                <a
                  href={`/posts?tag=${encodeURIComponent(tag)}`}
                  class="text-xs text-primary-600 dark:text-primary-300 bg-primary-100 dark:bg-primary-800 px-2.5 py-1 rounded-full border border-primary-200 dark:border-primary-700 transition-colors hover:bg-highlight-100 dark:hover:bg-highlight-800"
                >
                  {tag}
                </a>
              ))}
            </div>
          )}
        </header>

        <!-- 文章内容 -->
        <div class="prose dark:prose-dark max-w-none" id="post-content">
          <Content />
        </div>

        {siteConfig.postOptions.linkedMentions.enabled && (
          <LinkedMentions currentSlug={post.id} />
        )}

        <!-- 文章导航 -->
        {siteConfig.postOptions.postNavigation && (prevPost || nextPost) && (
          <nav class="mt-8 pt-8 border-t border-primary-200 dark:border-primary-700">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              {prevPost && (
                <div class="text-left">
                  <a
                    href={`/posts/${prevPost.id}`}
                    class="group block p-4 rounded-lg border border-primary-200 dark:border-primary-700 hover:border-highlight-300 dark:hover:border-highlight-600 transition-all duration-200 hover:shadow-md"
                  >
                    <h3 class="font-semibold text-primary-900 dark:text-primary-50 group-hover:text-highlight-600 dark:group-hover:text-highlight-400 transition-colors">
                      {prevPost.data.title}
                    </h3>
                    <div class="flex justify-start mt-2">
                      <Icon name="arrow-left" class="w-5 h-5 text-primary-500 dark:text-primary-400 group-hover:text-highlight-500 dark:group-hover:text-highlight-400 transition-colors" />
                    </div>
                  </a>
                </div>
              )}

              {nextPost && (
                <div class={`text-right ${!prevPost ? 'md:col-start-2' : ''}`}>
                  <a
                    href={`/posts/${nextPost.id}`}
                    class="group block p-4 rounded-lg border border-primary-200 dark:border-primary-700 hover:border-highlight-300 dark:hover:border-highlight-600 transition-all duration-200 hover:shadow-md"
                  >
                    <h3 class="font-semibold text-primary-900 dark:text-primary-50 group-hover:text-highlight-600 dark:group-hover:text-highlight-400 transition-colors">
                      {nextPost.data.title}
                    </h3>
                    <div class="flex justify-end mt-2">
                      <Icon name="arrow-right" class="w-5 h-5 text-primary-500 dark:text-primary-400 group-hover:text-highlight-500 dark:group-hover:text-highlight-400 transition-colors" />
                    </div>
                  </a>
                </div>
              )}
            </div>
          </nav>
        )}

        <!-- Giscus 评论 -->
        {siteConfig.postOptions.comments.enabled && (
          <div class="mt-16">
            <GiscusComments
              postTitle={post.data.title}
              postSlug={post.id}
              postUrl={Astro.url.href}
            />
          </div>
        )}
        </div>
      </article>

      <!-- 桌面端侧边栏 - 浮动在内容容器的右侧 -->
      <div class="hidden xl:block absolute top-0 left-full ml-1 w-64">
        <div class={`top-24 ${hasLocalGraphConnections || shouldShowTOC ? 'space-y-4' : ''}`} id="sidebar">
          {hasLocalGraphConnections && (
            <div id="local-graph-sidebar">
              <LocalGraph currentSlug={post.id} />
            </div>
          )}


          {shouldShowTOC && (
            <div id="toc">
              <TableOfContents headings={toc} />
            </div>
          )}
        </div>
      </div>
    </div>
  </div>

  <Fragment slot="scripts">
    <script define:vars={{ posts: visiblePosts, commentsEnabled: siteConfig.postOptions.comments.enabled, postTitle: post.data.title, postSlug: post.id }}>

      // 处理维基链接 - 所有维基链接类型的统一逻辑
      function initializeWikilinks() {
        const wikilinks = document.querySelectorAll('.wikilink[data-wikilink]');

        wikilinks.forEach(link => {
          const linkText = link.dataset.wikilink;
          
          // 跳过同页锚点（空的 data-wikilink）- 它们已经正确格式化
          if (!linkText || linkText === '') {
            return;
          }
          
          const displayOverride = link.dataset.displayOverride;
          const currentDisplayText = link.textContent;

          // 查找匹配的文章 - 使用 id（不是 slug，在 Astro v6 中已弃用）
          const slug = linkText.toLowerCase()
            .replace(/[^a-z0-9\s-]/g, '')
            .replace(/\s+/g, '-')
            .replace(/-+/g, '-')
            .replace(/^-+|-+$/g, '');

          // 从标题创建 slug 的辅助函数（与 resolveWikilink 逻辑相同）
          const createSlugFromTitle = (title) => {
            return title.toLowerCase()
              .replace(/[^a-z0-9\s-]/g, '')
              .replace(/\s+/g, '-')
              .replace(/-+/g, '-')
              .replace(/^-+|-+$/g, '');
          };

          // 首先尝试精确的 id 匹配（Astro v6 使用 id，不是 slug）
          let post = posts.find(p => p.id === slug);
          
          // 如果未找到，尝试标题匹配（用于使用文章标题的维基链接）
          if (!post) {
            post = posts.find(p => createSlugFromTitle(p.data.title) === slug);
          }

          if (post) {
            // 更新 href - 如果存在锚点则保留
            const currentHref = link.href || link.getAttribute('href') || '';
            const anchorMatch = currentHref.match(/#(.+)$/);
            const anchor = anchorMatch ? anchorMatch[1] : null;
            
            if (anchor) {
              link.href = `/posts/${post.id}#${anchor}`;
            } else {
              link.href = `/posts/${post.id}`;
            }

            // 简单逻辑：
            // - 如果 displayOverride 存在且不为 null，它是带有自定义文本的维基链接 [[link|display]] - 使用它
            // - 如果 displayOverride 为 null/undefined，它是标准的 markdown 链接 [text](url) - 永不更改文本
            // - 如果 displayOverride 为空字符串，它是裸维基链接 [[link]] - 使用文章标题

            if (displayOverride && displayOverride !== 'null' && displayOverride !== 'undefined') {
              // 带有自定义显示的维基链接：[[link|display]]
              link.textContent = displayOverride;
            } else if (displayOverride === 'null' || displayOverride === null || displayOverride === 'undefined' || displayOverride === undefined) {
              // 标准的 markdown 链接：[text](url) - 永不更改显示文本
              // 保持 currentDisplayText 不变
            } else {
              // 裸维基链接：[[link]] - 使用文章标题
              link.textContent = post.data.title;
            }
          } else {
            // 标记为损坏的链接
            link.classList.add('wikilink-broken');
            link.title = '链接未找到';
          }
        });
      }

      // 使函数在全局可用，用于 Swup 重新初始化
      window.initializeWikilinks = initializeWikilinks;

      // 在内容加载后处理维基链接并初始化布局
      document.addEventListener('DOMContentLoaded', () => {
        // 处理外部链接 - 由 BaseLayout 处理，但在此处调用作为初始加载的备用方案
        if (window.processExternalLinks) {
          window.processExternalLinks();
        }

        // 在初始加载时初始化维基链接
        initializeWikilinks();
      });

      // 外部链接现在由 BaseLayout Swup 钩子全局处理

    </script>
  </Fragment>

  <!-- Lightbox 由 BaseLayout 全局处理 -->
</BaseLayout>