---
import type { Page } from '@/types';
import { siteConfig } from '@/config';
import { render } from 'astro:content';
import { generatePageSEO } from '@/utils/seo';
import { optimizeContentImagePath, getOptimizedFormat } from '@/utils/images';
import BaseLayout from '@/layouts/BaseLayout.astro';
import TableOfContents from '@/components/TableOfContents.astro';
import Lightbox from '@/components/Lightbox.astro';
import ImageWrapper from '@/components/ImageWrapper.astro';

export interface Props {
  page: Page;
}

const { page } = Astro.props;

// 不需要动态图片导入 - ImageWrapper 会处理这个

// 渲染页面内容
const { Content, headings } = await render(page);

// 生成 SEO 数据
const seoData = generatePageSEO(page, Astro.url.href);

// 从标题生成目录，使用可配置的深度
const maxDepth = siteConfig.tableOfContents.depth;
const toc = headings.filter(h => h.depth >= 2 && h.depth <= maxDepth);

// 检查是否应显示目录 - 全局设置，然后是 hideTOC frontmatter，然后是 showTOC frontmatter（页面默认为 true）
const hideTOC = page.data.hideTOC === true;
const showTOC = page.data.showTOC !== undefined ? page.data.showTOC : true;
const shouldShowTOC = siteConfig.tableOfContents.enabled && !hideTOC && showTOC && toc.length > 0;

// 生成结构化数据
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'WebPage',
  name: page.data.title,
  description: page.data.description,
  url: Astro.url.href,
  isPartOf: {
    '@type': 'WebSite',
    name: siteConfig.title,
    url: siteConfig.site
  },
  author: {
    '@type': 'Person',
    name: siteConfig.author
  }
};
---

<BaseLayout seoData={seoData}>
  <Fragment slot="head">
    <!-- 结构化数据 -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

    <!-- 如果存在页面图片则预加载 -->
    {page.data.image && typeof page.data.image === 'string' && !page.data.image.startsWith('http') && (() => {
      // 使用 optimizeContentImagePath 来处理基于文件夹和基于文件的页面
      const optimizedPath = optimizeContentImagePath(page.data.image, 'pages', page.id, page.id);
      return (
        <link
          rel="preload"
          as="image"
          href={optimizedPath}
          fetchpriority="high"
        />
      );
    })()}
  </Fragment>

  <div class="py-8 relative">
    <div class="mx-auto px-4 sm:px-6 lg:px-8 relative" style={`max-width: ${siteConfig.layout.contentWidth}`}>
      <!-- 页面内容 -->
      <article class={`bg-primary-50 dark:bg-primary-900 rounded-lg border border-primary-200 dark:border-primary-700 shadow-sm ${page.data.image ? 'overflow-hidden' : ''}`}>
        {page.data.image && (() => {
          // 处理图片路径，类似于 PostLayout
          let rawImage = page.data.image;
          if (Array.isArray(rawImage)) {
            rawImage = rawImage[0];
          }
          
          // 清理 Obsidian 括号
          let cleanImagePath = typeof rawImage === 'string' ? rawImage : '';
          if (cleanImagePath.startsWith('[[') && cleanImagePath.endsWith(']]')) {
            cleanImagePath = cleanImagePath.slice(2, -2);
          }
          
          // 确定 ImageWrapper 的 src 和 basePath
          let imageSrc = cleanImagePath;
          let imageBasePath = '';
          
          if (typeof cleanImagePath === 'string' && cleanImagePath.startsWith('http')) {
            // 外部 URL - 直接传递
            imageSrc = cleanImagePath;
            imageBasePath = '';
          } else {
            // 检测基于文件夹与基于文件：如果图片路径以 'attachments/' 开头，
            // 则是单文件页面（共享附件文件夹）
            const isFileBased = typeof cleanImagePath === 'string' && cleanImagePath.startsWith('attachments/');
            
            if (isFileBased) {
              // 单文件页面 - 移除 attachments/ 前缀
              imageSrc = cleanImagePath.replace('attachments/', '');
              imageBasePath = '/pages/attachments/';
            } else {
              // 基于文件夹的页面 - 同步脚本将图片复制到页面文件夹根目录
              // 如果存在则移除 'images/' 或 'attachments/' 前缀（同步脚本会移除它们）
              if (cleanImagePath.startsWith('images/') || cleanImagePath.startsWith('attachments/')) {
                imageSrc = cleanImagePath.replace(/^(images|attachments)\//, '');
              } else {
                imageSrc = cleanImagePath;
              }
              // 安全检查：在使用 page.id 之前确保它存在
              if (page.id) {
                imageBasePath = `/pages/${page.id}/`;
              } else {
                // 如果 page.id 未定义，回退到附件目录
                imageBasePath = '/pages/attachments/';
              }
            }
          }
          
          // 如果适用则转换为 WebP（sync-images.js 会创建 WebP 版本）
          imageSrc = getOptimizedFormat(imageSrc);
          
          return (
            <div class="h-40 sm:h-48 md:h-56 lg:h-64 overflow-hidden rounded-t-lg bg-primary-100 dark:bg-primary-800">
              <ImageWrapper
                src={imageSrc}
                basePath={imageBasePath}
                alt={page.data.imageAlt || `页面特色图片: ${page.data.title}`}
                class="w-full h-full object-cover"
                width={800}
                height={450}
                format="webp"
                quality={85}
                loading="eager"
                fetchpriority="high"
              />
            </div>
          );
        })()}

        <!-- 页面内容包装器 -->
        <div class={`p-6 ${page.data.image ? 'rounded-b-lg' : 'rounded-lg'}`}>
          <!-- 页面页眉 -->
          <header class="mb-4">
            <h1 class="text-xl font-bold text-primary-900 dark:text-primary-50 mb-6 leading-tight">
              {page.data.title}
            </h1>
          </header>

          <!-- 页面内容 -->
          <div class="prose dark:prose-dark max-w-none" id="page-content">
            <Content />
          </div>
        </div>
      </article>

      <!-- 桌面端目录 - 浮动在内容容器的右侧 -->
      {shouldShowTOC && (
        <div class="hidden xl:block absolute top-0 left-full ml-1 w-64">
          <div class="sticky top-24" id="toc">
            <TableOfContents headings={toc} />
          </div>
        </div>
      )}
    </div>
  </div>

  <!-- Lightbox 由 BaseLayout 全局处理 -->

  <Fragment slot="scripts">
    <script>
      // 为图片初始化灯箱功能
      document.addEventListener('DOMContentLoaded', () => {
        function initializeLightbox() {
          const images = document.querySelectorAll('img');
          images.forEach((img, index) => {
            // 跳过已经可点击的图片（如图库中的图片）
            if (img.closest('a') || img.closest('.image-grid')) {
              return;
            }

            // 使图片可点击
            img.style.cursor = 'pointer';
            img.addEventListener('click', () => {
              // 派发自定义事件以打开灯箱
              window.dispatchEvent(new CustomEvent('openLightbox', {
                detail: { index }
              }));
            });
          });
        }

        // 在短暂延迟后初始化灯箱，确保图片已加载
        setTimeout(initializeLightbox, 200);
      });
      // 从页面内容中移除重复的 H1（因为我们在页眉中渲染了它）
      document.addEventListener('DOMContentLoaded', function() {
        const pageContent = document.getElementById('page-content');
        if (pageContent) {
          const firstH1 = pageContent.querySelector('h1');
          if (firstH1) {
            firstH1.remove();
          }
        }
      });

      // 在 DOM 加载后处理内容
      document.addEventListener('DOMContentLoaded', function() {
        // 初始化图片网格布局（对不支持 :has() 的浏览器的回退方案）
        function initializeImageGrids() {
          // 检查浏览器是否支持 :has() 选择器
          const supportsHas = CSS.supports('selector(:has(img))');

          if (supportsHas) {
            // 浏览器支持 :has()，CSS 会自动处理
            return;
          }

          // 对不支持 :has() 的浏览器的回退方案
          const paragraphs = document.querySelectorAll('.prose p');

          paragraphs.forEach(p => {
            const images = p.querySelectorAll('img, picture');
            const textNodes = Array.from(p.childNodes).filter((node) => {
              return node.nodeType === Node.TEXT_NODE && (node.textContent || '').trim() !== '';
            });
            const otherElements = Array.from(p.childNodes).filter((node) => {
              return node.nodeType === Node.ELEMENT_NODE && !['IMG', 'PICTURE', 'BR'].includes(((node as Element).tagName || ''));
            });

            // 仅当段落包含 2+ 张图片且没有其他有意义的内容时才处理
            if (images.length >= 2 && textNodes.length === 0 && otherElements.length === 0) {
              // 首先移除任何现有的 image-grid 类
              p.classList.remove('image-grid', 'image-grid-2', 'image-grid-3', 'image-grid-4', 'image-grid-5', 'image-grid-6');

              // 添加适当的网格类
              const gridClass = `image-grid-${Math.min(images.length, 6)}`;
              p.classList.add('image-grid', gridClass);
            }
          });
        }

        // 初始化图片网格
        initializeImageGrids();

        // 处理内容中的所有外部链接以在新标签页中打开（包括参考链接）
        const allLinks = document.querySelectorAll('.prose a[href]');
        allLinks.forEach(link => {
          const href = link.getAttribute('href');
          if (href && (href.startsWith('http://') || href.startsWith('https://'))) {
            // 如果已经有 target 属性则跳过（例如手动设置的）
            if (!link.hasAttribute('target')) {
              link.setAttribute('target', '_blank');
              link.setAttribute('rel', 'noopener noreferrer');
            }
          }
        });

        // 将表格包装在响应式容器中，以获得更好的移动端体验
        const tables = document.querySelectorAll('.prose table');
        tables.forEach((table) => {
          if (table.parentElement && !table.parentElement.classList.contains('table-wrapper')) {
            const wrapper = document.createElement('div');
            wrapper.className = 'table-wrapper';
            // 让 CSS 处理样式而不是内联样式

            if (table.parentNode) {
              (table.parentNode as Node & ParentNode).insertBefore(wrapper, table);
            }
            wrapper.appendChild(table);

            // 重置表格边距，因为包装器会处理它
            (table as unknown as HTMLElement).style.margin = '0';
          }
        });


      });
    </script>
  </Fragment>
</BaseLayout>